{
  "editor.wordWrap": "on",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always" //  assumes that the ESLint extension installed in VSCode.when you save code, eslint runs
  },
  "editor.formatOnPaste": false, // required
  "editor.formatOnType": false, // required
  "css.lint.unknownAtRules": "ignore", // for @apply rule for tailwind
  "scss.lint.unknownAtRules": "ignore", // for @apply rule for tailwind
  "files.associations": {
    "*.css": "tailwindcss" // extension Tailwind CSS IntelliSense config
  },
  "editor.quickSuggestions": {
    "strings": "on" // extension Tailwind CSS IntelliSense config
  },
  "editor.formatOnSave": true,
  "files.eol": "\n"
}
